(1 row)

insert into sample
select time,
       format('%s MiB', random() * 1024)::bytes,
       format('%s kB', random() * 1024 * 1024)::bytes
from generate_series('2022-01-01 00:00:00'::timestamptz, '2022-01-02 00:00:00'::timestamptz, '1 minute') as time;
     
